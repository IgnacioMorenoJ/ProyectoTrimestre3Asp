@model IEnumerable<ProyectoTrimestre3Asp.Models.producto_imagen>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Prodcuto Imagen</h2>

<p>
    @Html.ActionLink("Nuevo Item", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Imagen Producto
        </th>
        <th>
            Id Producto
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.imagen)
            </td>
            <td>
                @Html.Action("ListarProducto")
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "linkDelete" })|
            </td>
        </tr>
    }

</table>

@section scripts

{
    <script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿ Esta seguro de eliminar ?')) {
                event.preventDefault();
            }
        })
    </script>

}
