@model IEnumerable<ProyectoTrimestre3Asp.Models.producto>

@{
    ViewBag.Title = "Index";
}

<h2>Todos los Productos</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre Producto
        </th>
        <th>
            Precio Unitario
        </th>
        <th>
           Decripcion Producto
        </th>
        <th>
            Cantidad
        </th>
        <th>
            Id_Proveedor
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.percio_unitario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cantidad)
        </td>
        <td>
            @ProyectoTrimestre3Asp.Controllers.ProductoController.NombreProveedor(item.id_proveedor)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
