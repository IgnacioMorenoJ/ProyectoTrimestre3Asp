@model IEnumerable<ProyectoTrimestre3Asp.Models.compra>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Compras</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Fecha de Compra
        </th>
        <th>
            Total
        </th>
        <th>
            Usuario
        </th>
        <th>
           Cliente
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.total)
        </td>
        <td>
            @ProyectoTrimestre3Asp.Controllers.CompraController.NombreUsuario(item.id_usuario)
        </td>
        <td>
            @ProyectoTrimestre3Asp.Controllers.CompraController.NombreCliente(item.id_cliente)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.id })|
        </td>
    </tr>
}

</table>
